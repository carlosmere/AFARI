@model VEH.Intranet.ViewModel.Control.AddEditAnuncioViewModel
@{
    ViewBag.Title = Model.AnuncioId.HasValue ? "Editar" : "Agregar"+ " Anuncio";
}

@section Breadcrumbs{
}

<div class="panel panel-inverse">
    <div class="panel-body">
        <form method="post" class="form-horizontal" enctype="multipart/form-data">
            @Html.HiddenFor(x => x.AnuncioId)
            <div class="form-group">
                <label class="col-md-2 control-label">Nombre</label>
                <div class="col-md-3">
                    @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control " })
                    @Html.ValidationMessageFor(x => x.Nombre)
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Prioridad</label>
                <div class="col-md-3">
                    @Html.TextBoxFor(x => x.Prioridad, new { @class = "form-control " })
                    @Html.ValidationMessageFor(x => x.Prioridad)
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Url a abrir</label>
                <div class="col-md-3">
                    @Html.TextBoxFor(x => x.Url, new { @class = "form-control " })
                    @Html.ValidationMessageFor(x => x.Url)
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Imagen</label>
                <div class="col-md-3">
                    @Html.TextBoxFor(x => x.Archivo, new { @class = "form-control",@type="file" })
                </div>
                @if (!String.IsNullOrEmpty(Model.Ruta))
                {
                    <div class="col-md-3">
                        <a target="_blank" href="@Url.Content("~/Resources/Files/Anuncio/")@Model.Ruta">Abrir imagen</a>
                    </div>
                }
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Descripción</label>
                <div class="col-md-3">
                    @Html.TextAreaFor(x => x.Descripcion, new { @class = "form-control " })
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="ui-sortable">
                    <button type="submit" class="btn btn-sm btn-primary m-r-10 pull-right"><i class="fa fa-save"></i>&nbsp;&nbsp;Guardar</button>
                    <a href="@Url.Action("LstAnuncio", "Control")" class="btn btn-sm btn-default m-r-5 pull-right"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
