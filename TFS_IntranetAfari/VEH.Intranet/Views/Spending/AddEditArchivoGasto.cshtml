@model VEH.Intranet.ViewModel.Spending.AddEditArchivoGastoViewModel
@{
    ViewBag.Title = (Model.ArchivoGastoId != null ? "Editar" : "Agregar") + " archivo de gasto";
}
@section Breadcrumbs{
    <li><a href="@Url.Action("LstEdificio", "Building")">Edificio</a></li>
    <li><a href="@Url.Action("LstGastoAdmin", "Spending", new { EdificioId = Model.EdificioId })">Gasto</a></li>
    <li><a href="@Url.Action("LstArchivoGastoAdmin", "Spending", new { GastoId = Model.GastoId, EdificioId = Model.EdificioId })">Archivo de gasto</a></li>
}

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#CargaArch").change(function () {
                $("#Nombre").val($("#CargaArch").val().split(/(\\|\/)/g).pop());
            });
        });
    </script>
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-building-o"></i>&nbsp;Edificio</h4>
                <dl class="dl-horizontal">
                    <dt>Nombre</dt>
                    <dd>@Model.Edificio.Nombre</dd>
                    <dt>Unidad medida</dt>
                    <dd>@Model.DescripcionUnidadMedida</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-inverse">
    <div class="panel-body">
        <form method="post" class="form-horizontal" enctype="multipart/form-data">
            @Html.HiddenFor(x => x.GastoId)
            @Html.HiddenFor(x => x.ArchivoGastoId)
            @Html.HiddenFor(x => x.EdificioId)
            @Html.HiddenFor(x => x.DescripcionUnidadMedida)
            <div class="form-group">
                <label class="col-md-2 control-label">Nombre</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control", rows = "3", id = "Nombre" })
                    @Html.ValidationMessageFor(x => x.Nombre)
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Archivo</label>
                <div class="col-md-10">
                    @if (!string.IsNullOrEmpty(Model.Ruta))
                    {
                        @Html.EditorFor(x => x.Archivo, new { Ruta = Url.Action("DescargarArchivo", "Spending", new { ruta = Model.Ruta, nombre = Model.Nombre, acronimo = Model.Edificio.Acronimo, unidadmedida = Model.DescripcionUnidadMedida }), @id = "CargaArch" })
                        <a href="@Url.Content("~/Resources/Files/"+ Model.Edificio.Acronimo +("/")+ HttpUtility.UrlEncode(Model.Ruta).Replace("+"," "))"><i class="fa fa-download"></i> Descargar</a>
                    }
                    else
                    { @Html.TextBoxFor(x => x.Archivo, new { type = "file", id = "CargaArch", @multiple = true })}
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="ui-sortable">
                    <button type="submit" class="btn btn-sm btn-primary m-r-10 pull-right"><i class="fa fa-save"></i>&nbsp;&nbsp;Guardar</button>
                    <a href="@Url.Action("LstArchivoGastoAdmin", "Spending", new { GastoId = Model.GastoId, EdificioId = Model.EdificioId })" class="btn btn-sm btn-default m-r-5 pull-right"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
