@model VEH.Intranet.ViewModel.Spending.AddEditGastoViewModel
@{
    ViewBag.Title = (Model.GastoId != null ? "Editar" : "Agregar") + " gasto";
    Layout = ConstantHelpers.Layout.MODAL_LAYOUT_PATH;
    ViewBag.Form = new ModalFormHelpers("AddEditGasto", "Spending", FormMethod.Post);
}

@Html.HiddenFor(x => x.EdificioId)
@Html.HiddenFor(x => x.GastoId)
<div class="form form-horizontal">
    <div class="form-group">
        <label class="col-md-2 control-label">Cuentas por Cobrar Ordinarias</label>
        <div class="col-md-6">
            @Html.TextBoxFor(x => x.CuentasPorCobrarO, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CuentasPorCobrarO)
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Cuentas por Cobrar Extra-ordinarias</label>
        <div class="col-md-6">
            @Html.TextBoxFor(x => x.CuentasPorCobrarE, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CuentasPorCobrarE)
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Unidad de tiempo</label>
        <div class="col-md-6">
            @Html.DropDownListFor(x => x.UnidadTiempoId, Model.LstComboUnidadTiempo, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.UnidadTiempoId)
        </div>
    </div>
</div>

@section Footer
{
    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-check"></i>&nbsp;&nbsp;Confirmar</button>
}

