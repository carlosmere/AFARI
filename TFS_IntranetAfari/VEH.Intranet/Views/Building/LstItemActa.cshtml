@model VEH.Intranet.ViewModel.Building.LstItemActaViewModel
@{
    ViewBag.Title = "Lista de Actas";
}

@section Breadcrumbs{
    <li><a href="@Url.Action("LstOpcionEdificio", "Building", new { EdificioId = Model.EdificioId })">Opciones Edificio</a></li>
}

<div class="panel panel-inverse">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse" data-original-title="" title="Colapsar / Expandir"><i class="fa fa-minus"></i></a>
        </div>
        <h4 class="panel-title"><i class="fa fa-filter"></i>&nbsp;&nbsp;Filtro</h4>
    </div>
    <div class="panel-body">
        <form class="form-horizontal" novalidate="novalidate">
            @Html.HiddenFor( x => x.EdificioId)
            <div class="form-group">
                <label class="col-md-2 control-label ui-sortable">Anio</label>
                <div class="col-md-6 ui-sortable">
                    @Html.DropDownListFor(x => x.Anio, Model.LstAnios, "[-Seleccione-]", new { @class = "form-control select2" })
                </div>
                <div class="col-md-2 col-md-offset-10 ui-sortable">
                    <button type="submit" class="btn btn-sm btn-primary m-r-5"><i class="fa fa-search"></i>&nbsp;&nbsp;Buscar</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <div>
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <h4 class="panel-title"><i class="fa fa-list"></i>&nbsp;&nbsp;Listado</h4>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="col-sm-2 text-center">Archivo</th>
                                <th class="col-sm-4 text-center">Unidad Tiempo</th>
                                <th class="col-sm-2 text-center"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LstItem)
                            {
                                <tr>
                                    <td class="text-center">
                                        <a target="_blank" href="@Url.Content("~/Resources/Files/Actas/" + HttpUtility.UrlEncode(item.Ruta).Replace("+"," "))"><i class="fa fa-download"></i> @item.Nombre</a>
                                    </td>
                                    <td class="text-center">@item.UnidadTiempo.Descripcion</td>
                                    <td class="text-center">
                                        <div class="input-group">
                                            <div class="input-group-btn btn-xs">
                                                <a target="_blank" href="@Url.Action("AddEditItemActa", "Building", new { ItemActaId = item.ItemActaId , EdificioId = Model.EdificioId})" class="btn btn-default btn-xs"><i class="fa fa-pencil"></i>&nbsp;Editar</a>
                                                <button type="button" class="btn btn-default dropdown-toggle btn-xs" data-toggle="dropdown">
                                                    <span class="caret"></span>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li><a href="@Url.Action("DeleteItemActa", "Building", new { ItemActaId = item.ItemActaId, EdificioId = Model.EdificioId })"><i class="fa fa-trash"></i>&nbsp;Eliminar</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-sm btn-primary" href="@Url.Action("AddEditItemActa", "Building", new { EdificioId = Model.EdificioId })"><i class="fa fa-plus"></i>&nbsp;Agregar Acta</a>
