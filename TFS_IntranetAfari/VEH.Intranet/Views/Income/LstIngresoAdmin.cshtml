@model VEH.Intranet.ViewModel.Income.LstIngresoViewModel
@{
    ViewBag.Title = "Ingresos";
}

@section Breadcrumbs{
    <li><a href="@Url.Action("LstEdificio", "Building")">Lista de Edificios</a></li>
    <li><a href="@Url.Action("LstOpcionEdificio", "Building", new { EdificioId = Model.EdificioId })">Opciones Edificio</a></li>
}
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-building-o"></i>&nbsp;Edificio</h4>
                <dl class="dl-horizontal">
                    <dt>Nombre</dt>
                    <dd>@Model.Edificio.Nombre</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="panel panel-inverse">
        <div class="panel-heading">
            <h4 class="panel-title"><i class="fa fa-filter"></i>&nbsp;&nbsp;Filtro</h4>
        </div>
        <div class="panel-body">
            <form class="form-horizontal" novalidate="novalidate">
                @Html.HiddenFor(x => x.EdificioId)
                <div class="form-group">
                    <label class="col-md-2 control-label ui-sortable">Año</label>
                    <div class="col-md-6 ui-sortable">
                        @Html.DropDownListFor(x => x.Anio, Model.LstAnios, new { @class = "form-control select2" })
                    </div>
                    <div class="col-md-2 col-md-offset-10 ui-sortable">
                        <button type="submit" class="btn btn-sm btn-primary m-r-5"><i class="fa fa-search"></i>&nbsp;&nbsp;Buscar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <div>
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <h4 class="panel-title"><i class="fa fa-list"></i>&nbsp;&nbsp;Listado</h4>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="col-sm-8 text-center">Unidad Tiempo</th>
                                <th class="col-sm-2 text-center">Estado</th>
                                <th class="col-sm-2 text-center">Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LstIngreso)
                            {
                                <tr>
                                    <td class="text-center">@item.UnidadTiempo.Descripcion</td>
                                    <td class="text-center"><span class="label @(item.Estado == ConstantHelpers.EstadoActivo ? "label-success" : "label-danger")">@(item.Estado == ConstantHelpers.EstadoActivo ? "Activo" : "Inactivo")</span></td>
                                    <td class="text-center">

                                        <div class="input-group">
                                            <div class="input-group-btn btn-xs">
                                                <a class="btn btn-xs btn-default" @Data.ModalLink("_AddEditIngreso", "Income", new { IngresoId = item.IngresoId, EdificioId = Model.EdificioId })><i class="fa fa-pencil"></i>&nbsp;Editar</a>
                                                <button type="button" class="btn btn-default dropdown-toggle btn-xs" data-toggle="dropdown">
                                                    <span class="caret"></span>
                                                </button>
                                                <ul class="dropdown-menu">                                                    
                                                    <li><a href="@Url.Action("LstDetalleIngresoAdmin", "Income", new { IngresoId = item.IngresoId, EdificioId = Model.EdificioId })"><i class="fa fa-money"></i>&nbsp;&nbsp;Adm. detalle de ingreso</a></li>
                                                    @*<li><a href="@Url.Action("LstArchivoIngresoAdmin", "Income", new { IngresoId = item.IngresoId, EdificioId = Model.EdificioId })"><i class="fa fa-file"></i>&nbsp;&nbsp;Adm. archivo de ingreso</a></li>*@
                                                    <li><a href="@Url.Action("DownloadReporteDepartamentoIngresosGastos", "Building", new { EdificioId = Model.EdificioId, UnidadTiempoId = item.UnidadTiempo.UnidadTiempoId,mes = DateTime.Now.Month,annio = DateTime.Now.Year , dia = DateTime.Now.Day })"><i class="fa fa-arrow-down"></i>&nbsp;&nbsp;Descargar balance de ingresos y gastos</a></li>

                                                    <li class="divider"></li>
                                                    <li><a class="btn" @Data.ModalLink("_DeleteIngreso", "Income", new { IngresoId = item.IngresoId, EdificioId = Model.EdificioId })><i class="fa fa-trash-o"></i>&nbsp;&nbsp;Eliminar</a></li>
                                                </ul>
                                            </div>
                                        </div>


                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model.LstIngreso, page => Url.Action("LstIngresoAdmin", new { np = page , Anio  = Model.Anio }), ConstantHelpers.Bootstrap3Pager)
                </div>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-sm btn-default" href="@Url.Action("LstEdificio", "Building")"><i class="fa fa-arrow-left"></i>&nbsp;Regresar</a>&nbsp;
<a class="btn btn-sm btn-primary" @Data.ModalLink("_AddEditIngreso", "Income", new { EdificioId = Model.EdificioId })><i class="fa fa-plus"></i>&nbsp;Agregar ingreso</a>

