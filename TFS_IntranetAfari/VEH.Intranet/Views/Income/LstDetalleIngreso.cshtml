@model VEH.Intranet.ViewModel.Income.LstDetalleIngresoViewModel
@{
    ViewBag.Title = "Detalle de ingreso";
}
@section Breadcrumbs{
    <li><a href="@Url.Action("LstEdificio", "Building")">Edificio</a></li>
    <li><a href="@Url.Action("LstIngreso", "Income")">Ingreso</a></li>
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-building-o"></i>&nbsp;Edificio</h4>
                <dl class="dl-horizontal">
                    <dt>Nombre</dt>
                    <dd>@Model.Edificio.Nombre</dd>
                    <dt>Unidad medida</dt>
                    <dd>@Model.DescripcionUnidadMedida</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <h4 class="panel-title"><i class="fa fa-list"></i>&nbsp;&nbsp;Listado</h4>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="col-sm-8 text-center">Concepto</th>
                                <th class="col-sm-2 text-center">Monto</th>
                                <th class="col-sm-2 text-center">Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LstDetalleIngreso)
                            {
                                <tr>
                                    <td>@item.Concepto</td>
                                    <td>@String.Format("{0:0,0.00}", item.Monto)</td>
                                    <td class="text-center"><span class="label @(item.Estado == ConstantHelpers.EstadoActivo ? "label-success" : "label-danger")">@(item.Estado == ConstantHelpers.EstadoActivo ? "Activo" : "Inactivo")</span></td>                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model.LstDetalleIngreso, page => Url.Action("LstDetalleIngreso", new { IngresoId = Model.IngresoId,  np = page }), ConstantHelpers.Bootstrap3Pager)
                </div>
            </div>
        </div>
    </div>
</div>

<a class="btn btn-sm btn-default" href="@Url.Action("LstIngreso", "Income")"><i class="fa fa-arrow-left"></i>&nbsp;Regresar</a>&nbsp;