
<div class="form-group">
    @Html.LabelForModel(new { @class="col-md-2 control-label"})
    <div class="col-md-10">
        @if (ViewData.ContainsKey("Ruta") && ViewData["Ruta"] != null)
        { 
            <a href="@ViewData["Ruta"].ToString()">Descargar</a>
        }

        <input type="file" title="Seleccionar archivo" name="@Html.NameForModel()"/>

        @Html.ValidationMessageFor(x => x)
    </div>
</div>