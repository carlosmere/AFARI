@model VEH.Intranet.ViewModel.Owner.AddEditPropietarioViewModel

@{
    ViewBag.Title = "Ver propietario";
}

@section Breadcrumbs{
    <li><a href="@Url.Action("LstEdificio", "Building")">Edificio</a></li>
    <li><a href="@Url.Action("LstDepartamento", "Departament", new { EdificioId = Model.Edificio.EdificioId })">Departamento</a></li>
    <li><a href="@Url.Action("LstPropietario", "Owner", new { DepartamentoId = Model.DepartamentoId, EdificioId = Model.EdificioId })">Propietario</a></li>
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-building-o"></i>&nbsp;Edificio</h4>
                <dl class="dl-horizontal">
                    <dt>Nombre</dt>
                    <dd>@Model.Edificio.Nombre</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-desktop"></i>&nbsp;Departamento</h4>
                <dl class="dl-horizontal">
                    <dt>Número</dt>
                    <dd>@Model.Departamento.Numero</dd>
                    <dt>Piso</dt>
                    <dd>@Model.Departamento.Piso</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-inverse">
    <div class="panel-heading">
        <h4 class="panel-title">Datos propietario:</h4>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">Nombres</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.Nombres @Model.ApellidoPaterno @Model.ApellidoMaterno" disabled="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">Tipo Documento</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.TipoDocumento" disabled="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">Nro.Documento</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.NroDocumento" disabled="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">Cargo</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.Cargo" disabled="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">Celular</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.Celular" disabled="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">Teléfono</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.Telefono" disabled="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">Email</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.Email" disabled="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">Possedor</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.Poseedor" disabled="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">Parentesco</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.Parentesco" disabled="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">Contacto</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.ContactoPropietario" disabled="">
                </div>
            </div>
        </form>
    </div>
</div>
<div class="panel panel-inverse">
    <div class="panel-heading">
        <h3 class="panel-title">Datos Inquilino:</h3>
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">Nombres</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.NombresInq" disabled="">
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">Nro.Documento</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.DniInquilino" disabled="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">Telefono</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.TelefonoInq" disabled="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">Celular</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.CelularInq" disabled="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">Correo</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.EmailInq" disabled="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">Contacto</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.ContactoInquilino" disabled="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">RUC</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.RUCInq" disabled="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label ui-sortable">Razón Social</label>
                <div class="col-md-5 ui-sortable">
                    <input type="text" class="form-control" value="@Model.RazonSocialInq" disabled="">
                </div>
            </div>
        </form>
        <div class="pull-left">
            <a href="@Url.Action("LstPropietario", "Owner", new { DepartamentoId = Model.DepartamentoId, EdificioId = Model.EdificioId })" class="btn btn-sm btn-default m-r-5 pull-right"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;Regresar</a>
        </div>
    </div>
</div>

