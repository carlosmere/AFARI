@model VEH.Intranet.ViewModel.Employee.LstTrabajadorArchivoViewModel

@{
    ViewBag.Title = "Trabajadores";
}
@section Breadcrumbs{

}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-building-o"></i>&nbsp;Edificio</h4>
                <dl class="dl-horizontal">
                    <dt>Nombre</dt>
                    <dd>@Model.LstArchivo.Edificio.Nombre</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">

        <ul class="nav nav-tabs">
            <li class="@(Model.Pestania == 1 ? "active" : "")"><a href="#tab1" data-toggle="tab"><i class="fa fa-briefcase"></i>&nbsp;Trabajadores</a></li>
            @*<li class="@(Model.Pestania != 1 ? "active" : "")"><a href="#tab2" data-toggle="tab"><i class="fa fa-file"></i>&nbsp;Archivos</a></li>*@
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade @(Model.Pestania == 1 ? "active" : "") in" id="tab1">
                <div class="panel panel-inverse">
                    @* <div class="panel-heading">
                            <h4 class="panel-title"><i class="fa fa-list"></i>&nbsp;&nbsp;Listado</h4>
                        </div>*@
                    <div class="panel-body">
                        @foreach (var item in Model.LstTrabajador.LstTrabajador)
                        {

                            <div class="media media-sm">
                                <a class="pull-left" href="@Url.Content("~/Resources/Fotos/"+(!String.IsNullOrEmpty(item.Foto) ? item.Foto : @Url.Content("default_worker.png")))" data-lightbox="@item.Nombres @item.Apellidos" data-title="@item.Nombres @item.Apellidos">
                                    <img src="~/Resources/Fotos/@(!String.IsNullOrEmpty(item.Foto) ? item.Foto : @Url.Content("default_worker.png"))" alt="" class="media-object" />
                                </a>
                                <div class="media-body">
                                    <h4 class="media-heading">@item.Nombres @item.Apellidos</h4>
                                    <p>
                                        DNI : @item.DNI
                                        <br />
                                        Cargo : @item.Cargo
                                        @if (item.FechaIngreso.HasValue)
                                        {
                                            <br />
                                            @("Fecha de ingreso : " + item.FechaIngreso.Value.ToShortDateString())
                                        }
                                    </p>

                                </div>
                                @if (!String.IsNullOrEmpty(item.AntecedentesPoliciales))
                                {
                                    <a class="pull-left" target="_blank" href="~/Resources/Files/@item.AntecedentesPoliciales">
                                        <i class="fa fa-eye">&nbsp;Antecedentes Policiales</i>
                                    </a>
                                }

                                @if (!String.IsNullOrEmpty(item.PartidaNacimiento))
                                {
                                    <a class="pull-left" target="_blank" href="~/Resources/Files/@item.PartidaNacimiento">
                                        <i class="fa fa-eye">&nbsp;Curriculum Vitae</i>
                                    </a>
                                }
                            </div>
                        }
                        @Html.PagedListPager(Model.LstTrabajador.LstTrabajador, page => Url.Action("LstTrabajador", new { np1 = page, pestania = 1 }), ConstantHelpers.Bootstrap3Pager)
                    </div>
                </div>
            </div>
            <div class="tab-pane fade @(Model.Pestania != 1 ? "active" : "") in" id="tab2">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="col-sm-12">Nombre</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LstArchivo.LstArchivoTrabajador)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Ruta))
                                        { <a href="@Url.Action("DescargarArchivo", "Employee", new { ruta = item.Ruta, nombre = item.Nombre, acronimo = Model.LstTrabajador.Edificio.Acronimo, unidadtiempo = item.UnidadTiempo.Descripcion })" title="Clic para descargar">@item.Nombre</a>}
                                        else
                                        { @item.Nombre }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model.LstArchivo.LstArchivoTrabajador, page => Url.Action("LstTrabajador", new { np2 = page, pestania = 2 }), ConstantHelpers.Bootstrap3Pager)
                </div>
            </div>
        </div>
    </div>
</div>
