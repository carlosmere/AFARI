@model VEH.Intranet.ViewModel.Employee.DetallePlanillaViewModel

@{
    ViewBag.Title = "Detalle Planilla";
}

@section Breadcrumbs{
    <li><a href="@Url.Action("LstEdificio", "Building")">Edificio</a></li>
    <li><a href="@Url.Action("EditPlanilla", "Employee", new { EdificioId = Model.EdificioId })">Administrar Planillas</a></li>
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4>Datos Generales</h4>
                <dl class="dl-horizontal">
                    <dt><i class="fa fa-building-o"></i>&nbsp;Edificio</dt>
                    <dd>@Model.planilla.Trabajador.Edificio.Acronimo - @Model.planilla.Trabajador.Edificio.Nombre</dd>
                    <dt><i class="fa fa-user"></i>&nbsp;Trabajador</dt>
                    <dd>@Model.planilla.Trabajador.Nombres&nbsp;@Model.planilla.Trabajador.Apellidos</dd>
                    <dt><i class="fa fa-user"></i>&nbsp;Unidad de Tiempo</dt>
                    <dd>@Model.planilla.UnidadTiempo.Descripcion</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

@if (Model.planilla.Trabajador.AFP == null)
{
    <div class="alert alert-info">
        <strong>Atención</strong>&nbsp;El trabajador no cuenta con AFP.
    </div>
}
<div class="panel panel-inverse">
    <div class="panel-body">
        <form method="post" class="form-horizontal" enctype="multipart/form-data">
            @Html.HiddenFor(x => x.PlanillaId)
            @Html.HiddenFor(x => x.EdificioId)
            @Html.HiddenFor(x => x.UnidadTiempoId)

            <div class="form-group">
                <label class="col-md-2 control-label">Sueldo Base</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.planilla.Trabajador.SueldoBase, new { @class = "form-control", disabled = "true" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Horas Extras 25%</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.planilla.HorasExtras25, new { @class = "form-control", disabled = "true" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Monto Horas Extras 25%</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.planilla.MontoHorasExtras25, new { @class = "form-control", disabled = "true" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Horas Extras 35%</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.planilla.HorasExtras35, new { @class = "form-control", disabled = "true" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Monto Horas Extras 35%</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.planilla.MontoHorasExtras35, new { @class = "form-control", disabled = "true" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Feriados Trabajados</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.planilla.Feriado, new { @class = "form-control", disabled = "true" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Feriados S/</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.planilla.MontoFeriados, new { @class = "form-control", disabled = "true" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Descuentos por Ausencia</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.planilla.DescuenoAusencia, new { @class = "form-control", disabled = "true" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Aumento por Reemplazo</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.planilla.AumentoReemplazo, new { @class = "form-control", disabled = "true" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Total Mes</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.planilla.TotalMes, new { @class = "form-control", disabled = "true" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Adelanto Quincena</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.planilla.AdelantoQuincena, new { @class = "form-control", disabled = "true" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Segunda Quincena</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.planilla.SegundaQuincena, new { @class = "form-control", disabled = "true" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">ESSALUD 9%</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.planilla.ESSALUD, new { @class = "form-control", disabled = "true" })
                </div>
            </div>
            @if (Model.planilla.Trabajador.AFP != null)
            {
                <div class="form-group">
                    <label class="col-md-2 control-label">AFP</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.planilla.Trabajador.AFP.Nombre, new { @class = "form-control", disabled = "true" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Total Descuentos</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.TotalDescuentos, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Sueldo Total Neto</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.SueldoTotalNeto, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Segunda Quincena Neto</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.SegundaQuincenaNeto, new { @class = "form-control"})
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Gratificaciones del Mes</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.GratificacionesMes, new { @class = "form-control"})
                    </div>
                </div>
                
                if(Model.planilla.Trabajador.DetalleMensualidad.CTS == true)
                {
                    <div class="form-group">
                        <label class="col-md-2 control-label">CTS del Mes</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.CTSMes, new { @class = "form-control"})
                        </div>
                    </div>
                }

                <div class="form-group">
                    <label class="col-md-2 control-label">Reemplazo</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(x => x.ReemplazoVacaciones, new { @class = "form-control"})
                    </div>
                </div>

            }
            <div class="form-group">
                <div class="col-md-2 col-md-offset-10 ui-sortable">
                    @if (Model.planilla.Trabajador.AFP != null)
                    {
                        <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save"></i>&nbsp;&nbsp;Guardar</button>
                    }
                    <a href="@Url.Action("EditPlanilla", "Employee", new { EdificioId = Model.EdificioId, UnidadTiempoId = Model.UnidadTiempoId })" class="btn btn-sm btn-default"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
