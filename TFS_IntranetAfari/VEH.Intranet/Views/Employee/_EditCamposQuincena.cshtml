@model VEH.Intranet.ViewModel.Employee.EditCamposQuincenaViewModel
@{
    ViewBag.Title = "Editar Campos Quincena";
    Layout = ConstantHelpers.Layout.MODAL_LAYOUT_PATH;
    ViewBag.Form = new ModalFormHelpers("EditCamposQuincena", "Employee", FormMethod.Post);
}

@Html.HiddenFor(x => x.TrabajadorId)
@Html.HiddenFor(x => x.DetalleQuincenaId)

<div class="form-group">
        @Html.CheckBoxFor(x => x.tieneBonificacion)
        @Html.LabelFor(x => x.tieneBonificacion)
</div>

<div class="form-group">
        @Html.CheckBoxFor(x => x.tieneMovilidad)
        @Html.LabelFor(x => x.tieneMovilidad)
</div>


<div class="form-group">
        @Html.CheckBoxFor(x => x.tieneSeguro)
        @Html.LabelFor(x => x.tieneSeguro)
</div>

@section Footer
{
    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-check"></i>&nbsp;&nbsp;Confirmar</button>
}

