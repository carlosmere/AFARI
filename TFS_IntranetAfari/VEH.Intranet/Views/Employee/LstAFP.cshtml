@model VEH.Intranet.ViewModel.Employee.LstAFPViewModel


@{
    ViewBag.Title = "AFP";
    ViewBag.Section = "AFP";
}

@section Breadcrumbs{
}


<div> @*class="row">*@
    <div> @*class="col-sm-12">*@
        <form method="post">
            @foreach (var item in Model.LstAFP)
            {
                <div> @*class="col-md-6">*@
                    <div class="panel panel-inverse" data-sortable-id="table-basic-2">
                        <div class="panel-heading">
                            <h4 class="panel-title">@item.Nombre</h4>
                        </div>
                        <div class="panel-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Descripción</th>
                                        <th class="pull-right">Comisión</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var comision in Model.LstComisionAFP.Where(x => x.AFPId == item.AFPId).ToList())
                                    { 
                                        <tr>
                                            <td>@comision.TipoDescuento.Detalle</td>
                                            <td class="text-right">
                                                <input class="text-center" value="@comision.Comision" name="comision-@item.AFPId-@comision.TipoDescuentoId" />&nbsp;%
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            <div class="form-group">
                <div class="pull-right">
                    <button class="btn btn-sm btn-primary"><i class="fa fa-save"></i>&nbsp;Guardar</button>
                </div>
            </div>
        </form>
    </div>
</div>

