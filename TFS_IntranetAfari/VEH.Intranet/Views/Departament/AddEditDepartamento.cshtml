@model VEH.Intranet.ViewModel.Departament.AddEditDepartamentoViewModel
@{
    ViewBag.Title = (Model.DepartamentoId != null ? "Editar" : "Agregar") + " departamento";
}

@section Breadcrumbs{
    <li><a href="@Url.Action("LstEdificio", "Building")">Edificio</a></li>
    <li><a href="@Url.Action("LstDepartamento", "Departament")">Departamento</a></li>
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-building-o"></i>&nbsp;Edificio</h4>
                <dl class="dl-horizontal">
                    <dt>Nombre</dt>
                    <dd>@Model.NombreEdificio</dd>
                </dl>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <form method="post" class="form-horizontal">
                    @Html.HiddenFor(x => x.EdificioId)
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="Numero">Tipo</label>
                        <div class="col-md-4">
                            @Html.DropDownListFor(x => x.TipoInmuebleId, new SelectList(Model.LstTipoInmueble, "TipoInmuebleId", "Nombre"), new { @class = "form-control select2" })
                            @Html.ValidationMessageFor(x => x.TipoInmuebleId)
                        </div>
                    </div>
                    @Html.EditorFor(x => x.Numero, new { ancho = "2" })
                    @*@Html.EditorFor(x => x.Piso)*@
                    @Html.EditorFor(x => x.LecturaAgua)
                    @Html.EditorFor(x => x.FactorGasto)
                    @Html.EditorFor(x => x.DepartamentoM2)
                    @Html.EditorFor(x => x.Estacionamiento)
                    @Html.EditorFor(x => x.EstacionamientoM2)
                    @Html.EditorFor(x => x.Deposito)
                    @Html.EditorFor(x => x.DepositoM2)
                    @Html.EditorFor(x => x.AreaTotalM2)
                    @Html.EditorFor(x => x.PDistribucion)
                    @Html.EditorFor(x => x.CuotaDefault)
                    <div class="form-group">
                        <label class="col-md-2 control-label ui-sortable" for="AlertaMora">¿Se mostrará alerta de deuda?</label>
                        <div class="col-md-2">
                            @Html.DropDownListFor( x => x.AlertaMoraDrop, Model.LstAlertaMora, new { @class="form-control select2"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label ui-sortable" for="AlertaMora">Recibo a nombre de: </label>
                        <div class="col-md-2">
                            @Html.DropDownListFor(x => x.NombreReciboDepartamento, Model.LstNombreRecibo, new { @class = "form-control select2" })
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="ui-sortable">
                            <button type="submit" class="btn btn-sm btn-primary m-r-10 pull-right"><i class="fa fa-save"></i>&nbsp;&nbsp;Guardar</button>
                            <a href="@Url.Action("LstDepartamento", "Departament", new { EdificioId = Model.EdificioId })" class="btn btn-sm btn-default m-r-5 pull-right"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
