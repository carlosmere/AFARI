@model VEH.Intranet.ViewModel.Fee._AddEditMConsumoIndividual
@{
    ViewBag.Title = "Consumo Individual";
    Layout = ConstantHelpers.Layout.MODAL_LAYOUT_PATH;
    ViewBag.Form = new ModalFormHelpers("_AddEditMConsumoIndividual", "Fee", FormMethod.Post);
}
@Html.HiddenFor(x => x.EdificioId)
@Html.HiddenFor(x => x.UnidadTiempoId)

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-building-o"></i>&nbsp;Edificio</h4>
                <dl class="dl-horizontal">
                    <dt>Nombre</dt>
                    <dd>@Model.NombreEdificio</dd>
                    <dt>Unidad Tiempo</dt>
                    <dd>@Model.NombreUnidadTiempo</dd>
                    <dt>Departamento</dt>
                    <dd>@Model.NombreDepartamento</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="form-group">
        <label class="col-md-2 control-label">Departamento</label>
        <div class="col-md-6">
            @Html.DropDownListFor(x => x.DepartamentoId, new SelectList(Model.LstDepartamento, "DepartamentoId", "Numero"), new { @class = "form-control" })
        </div>
    </div>
</div>
<br />
@for (int i = 0; i < 10; i++)
{
    <div class="row">
        <div class="form-group">
            <label class="col-md-2 control-label">Detalle</label>
            <div class="col-md-5">
                @Html.TextBoxFor(x=>Model.lstdetalle[i],new { @class="form-control"})
            </div>
            <label class="col-md-2 control-label">Monto</label>
            <div class="col-md-3">
                @Html.TextBoxFor(x => Model.lstmonto[i], new { @class = "form-control" })
            </div>
        </div>
    </div>
    <br />
}

@section Footer{
    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-check"></i>&nbsp;&nbsp;Confirmar</button>
}