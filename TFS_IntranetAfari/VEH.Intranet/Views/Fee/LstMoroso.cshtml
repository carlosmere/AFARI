@model VEH.Intranet.ViewModel.Fee.LstMorosoViewModel
@{
    ViewBag.Title = "Lista de morosos";
}

@section Breadcrumbs{

}
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-building-o"></i>&nbsp;Edificio</h4>
                <dl class="dl-horizontal">
                    <dt>Nombre</dt>
                    <dd>@Model.Edificio.Nombre</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<div> @*class="row">*@
    <div> @*class="col-sm-12">*@
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse" data-original-title="" title="Colapsar / Expandir"><i class="fa fa-minus"></i></a>
                </div>
                <h4 class="panel-title"><i class="fa fa-filter"></i>&nbsp;&nbsp;Filtro</h4>
            </div>
            <div class="panel-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-2 control-label">Unidad de tiempo</label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(x => x.UnidadTiempoId, Model.LstComboUnidadTiempo, new { @class = "form-control" })
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="col-md-2 col-md-offset-10 ui-sortable">
                            <button type="submit" class="btn btn-sm btn-primary m-r-5"><i class="fa fa-search"></i>&nbsp;&nbsp;Buscar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div> @*class="row">*@
    <div> @*class="col-sm-12">*@
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <h4 class="panel-title"><i class="fa fa-list"></i>&nbsp;&nbsp;Listado</h4>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="col-sm-1 text-center">Departamento #</th>
                                <th class="col-sm-1 text-center">Piso</th>
                                <th class="col-sm-1 text-center">Lectura de agua</th>
                                <th class="col-sm-1 text-center">Consumo de mes</th>
                                <th class="col-sm-1 text-center">Consumo de agua</th>
                                <th class="col-sm-1 text-center">Cuota</th>
                                <th class="col-sm-1 text-center">Mora</th>
                                <th class="col-sm-1 text-center">Total</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LstMoroso)
                            {
                                <tr>
                                    <td class="text-center">@item.Departamento.Numero</td>
                                    <td class="text-center">@item.Departamento.Piso</td>
                                    <td class="text-center">@String.Format("{0:0,0.00}", item.LecturaAgua)</td>
                                    <td class="text-center">@String.Format("{0:0,0.00}", item.ConsumoMes)</td>
                                    <td class="text-center">@String.Format("{0:0,0.00}", item.ConsumoAgua)</td>
                                    <td class="text-center">@String.Format("{0:0,0.00}", item.Monto)</td>
                                    <td class="text-center">@String.Format("{0:0,0.00}", item.Mora)</td>
                                    <td class="text-center">@String.Format("{0:0,0.00}", item.Total)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

