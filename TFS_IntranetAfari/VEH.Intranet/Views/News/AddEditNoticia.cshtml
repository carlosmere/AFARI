@model VEH.Intranet.ViewModel.News.AddEditNoticiaViewModel

@{
    ViewBag.Title = (Model.NoticiaId.HasValue ? "Editar " : "Agregar ") + "noticia";
}

@section Breadcrumbs{
     <li><a href="@Url.Action("LstEdificio", "Building")">Edificio</a></li>
    <li><a href="@Url.Action("LstNoticiaAdm", "News", new { EdificioId = Model.EdificioId })">Noticia</a></li>
}

@section Styles{
    @RazorHelpers.Content("plugins/bootstrap-wysihtml5/src/bootstrap-wysihtml5.css", Url)
}

@section Scripts{

    @RazorHelpers.Content("plugins/ckeditor/ckeditor.js", Url)
    @RazorHelpers.Content("plugins/bootstrap-wysihtml5/lib/js/wysihtml5-0.3.0.js", Url)
    @RazorHelpers.Content("plugins/bootstrap-wysihtml5/src/bootstrap-wysihtml5.js", Url)
    @RazorHelpers.Content("js/form-wysiwyg.demo.min.js", Url)

    <script>
        $(document).ready(function () {
            FormWysihtml5.init();
        });
    </script>
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-building-o"></i>&nbsp;Edificio</h4>
                <dl class="dl-horizontal">
                    <dt>Nombre</dt>
                    <dd>@Model.Edificio.Nombre</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-inverse">
    <div class="panel-body">
        <form method="post" class="form-horizontal">
            @Html.HiddenFor(x => x.NoticiaId)
            @Html.HiddenFor(x => x.EdificioId)
            <div class="form-group">
                <label class="col-md-2 control-label">Titulo</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(x => x.Titulo, new { @class = "form-control", rows = "3" })
                    @Html.ValidationMessageFor(x => x.Titulo)
                </div>
            </div>
            @*<div class="form-group">
                <label class="col-md-2 control-label">Sumilla</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(x => x.Sumilla, new { @class = "form-control", rows = "3" })
                    @Html.ValidationMessageFor(x => x.Sumilla)
                </div>
            </div>*@
            <div class="form-group">
                <label class="col-md-2 control-label">Detalle</label>
                <div class="col-md-10">
                    <div class="panel panel-inverse">
                        <div class="panel-body panel-form">
                            @Html.TextAreaFor(x => x.Detalle, new { @class = "textarea form-control", id = "wysihtml5" , rows="5" })
                            @Html.ValidationMessageFor(X=>X.Detalle)
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="ui-sortable">
                    <button type="submit" class="btn btn-sm btn-primary m-r-10 pull-right"><i class="fa fa-save"></i>&nbsp;&nbsp;Guardar</button>
                    <a href="@Url.Action("LstNoticiaAdm", "News", new { EdificioId = Model.EdificioId })" class="btn btn-sm btn-default m-r-5 pull-right"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
