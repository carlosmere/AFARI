@inherits System.Web.Mvc.WebViewPage
@{
    var model = (VEH.Intranet.ViewModel.Templates.infoViewModel)Model;
}

<table border='0' cellpadding='0' cellspacing='0' width='100%'>
    <tr style="background:#247e7b">
        <td align='center' valign='top'>
            <img src="http://afari.pe/intranet/Content/img/logo-afari.png" width="187" height="54" />
        </td>
    </tr>

    <tr>
        <td valign='top' style="background:#3eb6b5;color:white">
            <br />
            <center>
                <h2 style='color: white !important'>
                    Credenciales de Acceso
                </h2>
            </center>
            <div style="margin-left: 10px; margin-right: 10px;">
                <p style='margin: 1em 0; text-align: justify;'>
                    <strong>
                        Estimado Usuario:<br />
                        El presente mensaje es para proporcionarle sus credenciales de acceso al sistema.
                    </strong>
                </p>
                <div>
                    <h3>
                        <strong>
                            @Html.Raw(model.Mensaje.Replace(" ", "&nbsp;").Replace("\n", "<br/>").ToString())
                        </strong>
                    </h3>
                </div>
                <br />
                <strong>
                    Saludos Cordiales,<br />
                    Afari.<br />
                    Administración y Corretaje Inmobiliario.
                </strong>
                <br>
                <br>
            </div>
            <br />
        </td>
    </tr>
    <tr style="background:#247e7b;color:white;">
        <td>
            <center>
                <div style="margin: 10px 10px 10px 10px;">
                    <strong><i>Esta dirección electrónica es utilizada únicamente para el envío de estos mensajes, por lo que agradeceremos no responder el mismo.</i></strong>
                </div>
            </center>
        </td>
    </tr>
</table>