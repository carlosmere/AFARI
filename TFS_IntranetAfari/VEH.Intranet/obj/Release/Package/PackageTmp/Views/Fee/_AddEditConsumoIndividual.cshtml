@model VEH.Intranet.ViewModel.Fee._AddEditConsumoIndividualViewModel
@{
    ViewBag.Title = "Consumo Individual";
    Layout = ConstantHelpers.Layout.MODAL_LAYOUT_PATH;
    ViewBag.Form = new ModalFormHelpers("_AddEditConsumoIndividual", "Fee", FormMethod.Post);
}
@Html.HiddenFor(x => x.EdificioId)
@Html.HiddenFor(x => x.CuotaId)
@Html.HiddenFor(x => x.UnidadTiempoId)
@Html.HiddenFor(x => x.ConsumoIndividualId)

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-building-o"></i>&nbsp;Edificio</h4>
                <dl class="dl-horizontal">
                    <dt>Nombre</dt>
                    <dd>@Model.NombreEdificio</dd>
                    <dt>Unidad Tiempo</dt>
                    <dd>@Model.NombreUnidadTiempo</dd>
                    <dt>Departamento</dt>
                    <dd>@Model.NombreDepartamento</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="form-group">
        <label class="col-md-2 control-label">Detalle</label>
        <div class="col-md-6">
            @Html.TextBoxFor(x => x.Detalle, new { @class = "form-control" })
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="form-group">
        <label class="col-md-2 control-label">Monto</label>
        <div class="col-md-6">
            @Html.TextBoxFor(x => x.Monto, new { @class = "form-control" })
        </div>
    </div>
</div>

@section Footer{
    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-check"></i>&nbsp;&nbsp;Confirmar</button>
}