@model VEH.Intranet.ViewModel.Employee.AddEditArchivoTrabajadorViewModel
@{
    ViewBag.Title = (Model.ArchivoTrabajadorId != null ? "Editar" : "Agregar") + " archivo ";
}
@section Breadcrumbs{
    <li><a href="@Url.Action("LstEdificio", "Building")">Edificio</a></li>
    <li><a href="@Url.Action("LstArchivoTrabajador", "Employee", new { EdificioId = Model.EdificioId })">Archivo</a></li>
}
@section Scripts{
<script>

 

    $(document).ready(function () {
        $("#CargaArch").change(function () {
            $("#Nombre").val($("#CargaArch").val().split(/(\\|\/)/g).pop());
            });
    });
</script>
    }
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-building-o"></i>&nbsp;Edificio</h4>
                <dl class="dl-horizontal">
                    <dt>Nombre</dt>
                    <dd>@Model.Edificio.Nombre</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-clock-o"></i>&nbsp;Unidad tiempo</h4>
                <dl class="dl-horizontal">
                    <dt>Descripción</dt>
                    <dd>@Model.DescripcionUnidadTiempo</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-inverse">
    <div class="panel-body">
        <form method="post" class="form-horizontal" enctype="multipart/form-data">
            @Html.HiddenFor(x => x.ArchivoTrabajadorId)
            @Html.HiddenFor(x => x.EdificioId)
            @Html.HiddenFor(x => x.DescripcionUnidadTiempo)
            <div class="form-group">
                <label class="col-md-2 control-label">Nombre</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Nombre)
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Unidad de tiempo</label>
                <div class="col-md-6">
                    @Html.DropDownListFor(x => x.UnidadTiempoId, Model.LstComboUnidadTiempo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.UnidadTiempoId)
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.Ruta))
            {   @Html.EditorFor(x => x.Archivo, new { Ruta = Url.Action("DescargarArchivo", "Employee", new { ruta = Model.Ruta, nombre = Model.Nombre, acronimo = Model.Edificio.Acronimo, unidadtiempo = Model.DescripcionUnidadTiempo }), @id = "CargaArch" }) }
            else
            {   @Html.TextBoxFor(x => x.Archivo, new { type = "file" , id="CargaArch" }) }
            <hr />
            <div class="form-group">
                <div class="ui-sortable">
                    <button type="submit" class="btn btn-sm btn-primary m-r-10 pull-right"><i class="fa fa-save"></i>&nbsp;&nbsp;Guardar</button>
                    <a href="@Url.Action("LstArchivoTrabajador", "Employee", new { EdificioId = Model.EdificioId })" class="btn btn-sm btn-default m-r-5 pull-right"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

