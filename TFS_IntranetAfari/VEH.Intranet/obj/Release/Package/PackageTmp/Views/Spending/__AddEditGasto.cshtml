@model VEH.Intranet.ViewModel.Spending.AddEditGastoViewModel

@{
    ViewBag.Title = (Model.GastoId != null ? "Editar" : "Agregar") + " gasto";
}


@section Breadcrumbs{
    <li><a href="@Url.Action("LstEdificio", "Building")">Adm. Edificio</a></li>
    <li><a href="@Url.Action("LstGasto", "Spending", new { EdificioId = Model.Edificio.EdificioId })">Adm. Gasto</a></li>
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-building-o"></i>&nbsp;Edificio</h4>
                <dl class="dl-horizontal">
                    <dt>Nombre</dt>
                    <dd>@Model.Edificio.Nombre</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

