@model VEH.Intranet.ViewModel.Shared.BaseViewModel

@if (Session.GetRol() == AppRol.Administrador)
{
    <li class='@(ViewBag.Section == "Dashboard" ? "active" : "")'>
        <a href='@Url.Action("AdministradorIndex", "Home")'>
            <i class='fa fa-dashboard'></i>
            <span>Dashboard</span>
        </a>
    </li>
    <li class='@(ViewBag.Section == "UsuarioAdm" ? "active" : "")'>
        <a href='@Url.Action("LstUsuarioAdm", "User")'>
            <i class='fa fa-shield'></i>
            <span>Usuario</span>
        </a>
    </li>
    <li class='@(ViewBag.Section == "Edificio" ? "active" : "")'>
        <a href='@Url.Action("LstEdificio", "Building")'>
            <i class='fa fa-building-o'></i>
            <span>Edificio</span>
        </a>
    </li>
    <li class='@(ViewBag.Section == "UnidadTiempo" ? "active" : "")'>
        <a href='@Url.Action("LstUnidadDeTiempo", "TimeUnit")'>
            <i class='fa fa-clock-o'></i>
            <span>Unidad Tiempo</span>
        </a>
    </li>
     <li class='@(ViewBag.Section == "Trabajador" ? "active" : "")'>
        <a href='@Url.Action("LstTrabajadorAdmin", "Employee")'>
            <i class='fa fa-briefcase'></i>
            <span>Trabajadores</span>
        </a>
    </li>
    <li class='@(ViewBag.Section == "TipoInmueble" ? "active" : "")'>
        <a href='@Url.Action("LstTipoInmuebles", "Building")'>
            <i class='fa fa-tag'></i>
            <span>Tipos Inmueble</span>
        </a>
    </li>
    <li class='@(ViewBag.Section == "AFP" ? "active" : "")'>
        <a href='@Url.Action("LstAnuncio", "Control")'>
            <i class='fa fa-map'></i>
            <span>Anuncios</span>
        </a>
    </li>
    <li class='@(ViewBag.Section == "AFP" ? "active" : "")'>
        <a href='@Url.Action("AddEditPdfUsuarioNuevo", "User")'>
            <i class='fa fa-file'></i>
            <span>PDF Usuario Nuevo</span>
        </a>
    </li>
    if (Session.GetEsAdmin() == true)
                {
        <li class='@(ViewBag.Section == "AFP" ? "active" : "")'>
            <a href = '@Url.Action("LstPermisoEdifico", "Control")' >
                <i class='fa fa-tasks'></i>
                <span>Permisos</span>
            </a>
        </li>
    }
}
else if (Session.GetRol() == AppRol.Propietario)
{
    <li class='@(ViewBag.Section == "Dashboard" ? "active" : "")'>
        <a href='@Url.Action("PropietarioIndex", "Home")'>
            <i class='fa fa-dashboard'></i>
            <span>Dashboard</span>
        </a>
    </li>    
    <li class='@(ViewBag.Section == "Noticias" ? "active" : "")'>
        <a href='@Url.Action("LstNoticia", "News")'>
            <i class='fa fa-info-circle'></i>
            <span>Noticias</span>
        </a>
    </li>
    <li class='@(ViewBag.Section == "Moroso" ? "active" : "")'>
        <a href='@Url.Action("CuadroMoroso", "Fee", new { EdificioId = Session.GetEdificioId() })'>
            <i class='fa fa-frown-o'></i>
            <span>Morosidad</span>
        </a>
    </li>
    <li class='@(ViewBag.Section == "EstadoCuenta" ? "active" : "")'>
        <a href='@Url.Action("LstDetailEstadoCuenta", "Fee")'>
            <i class='fa fa-bar-chart-o'></i>
            <span>Recibos de Mantenimiento</span>
        </a>
    </li>
    <li class='@(ViewBag.Section == "Actas" ? "active" : "")'>
        <a href='@Url.Action("LstItemActaPropietario", "Building", new { EdificioId = Session.GetEdificioId() })'>
            <i class='fa fa-tasks'></i>
            <span>Item de Actas</span>
        </a>
    </li>
    <li class='@(ViewBag.Section == "Trabajador" ? "active" : "")'>
        <a href='@Url.Action("LstTrabajador", "Employee")'>
            <i class='fa fa-briefcase'></i>
            <span>Trabajadores</span>
        </a>
    </li>
    <li class='@(ViewBag.Section == "Gasto" ? "active" : "")'>
        <a href='@Url.Action("LstGasto", "Spending", new { EdificioId = Session.GetEdificioId() })'>
            <i class='fa fa-shopping-cart'></i>
            <span>Ingresos y Gastos</span>
        </a>
    </li>
    <li class='@(ViewBag.Section == "Normas" ? "active" : "")'>
        <a href='@Url.Action("Normas", "Building")'>
            <i class='fa fa-list-ol'></i>
            <span>Normas de Convivencia</span>
        </a>
    </li>
    <li class='@(ViewBag.Section == "Normas" ? "active" : "")'>
        <a href='@Url.Action("LstEstadoCuentaBancario", "Building",new { EdificioId = Session.GetEdificioId() , Anio = DateTime.Now.Year})'>
            <i class='fa fa-bank'></i>
            <span>Estados de Cuenta Bancario</span>
        </a>
    </li>

    foreach (var menu in Model.elementosMenu)
    {
        <li class='@(ViewBag.Section == menu.Nombre ? "active" : "")'>
            <a href='@Url.Action("MenuExtra", "External", new { menuId = menu.MenuPropietarioEdificioId })'>
                <i class='@menu.Icono'></i>
                <span>@menu.Nombre</span>
            </a>
        </li>
    }
    if (Model.ObligacionesLaborales)
    {
        <li class='@(ViewBag.Section == "ObligacionesLaborales" ? "active" : "")'>
            <a href='@Url.Action("ItemsGenericos", "External", new { EdificioId = Model.EdificioId ,filtroNombre ="",filtroDato="",filtroTipo="Obliga",vista="ObligacionesLaborales"})'>
                <i class='fa fa-list'></i>
                <span>Obligaciones Laborales</span>
            </a>
        </li>
    }
    if (Model.Equipos)
    {
        <li class='@(ViewBag.Section == "Equipos" ? "active" : "")'>
            <a href='@Url.Action("ItemsGenericos", "External", new { EdificioId = Model.EdificioId ,filtroNombre ="",filtroDato="",filtroTipo="Equipo",vista="Equipos"})'>
                <i class='fa fa-briefcase'></i>
                <span>Certificados Equipos</span>
            </a>
        </li>
        <li class='@(ViewBag.Section == "Equipos" ? "active" : "")'>
            <a href='@Url.Action("LstCronogramaMantenimientoProp", "Building", new { EdificioId = Model.EdificioId })'>
                <i class='fa fa-clock-o'></i>
                <span>Cronograma de mantenimiento</span>
            </a>
        </li>
    }
}