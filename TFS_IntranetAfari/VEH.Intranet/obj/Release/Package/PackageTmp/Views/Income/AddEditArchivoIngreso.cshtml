    @model VEH.Intranet.ViewModel.Income.AddEditArchivoIngresoViewModel
@{
    ViewBag.Title = (Model.ArchivoIngresoId != null ? "Editar" : "Agregar") + " archivo de ingreso";
}
@section Breadcrumbs{
    <li><a href="@Url.Action("LstEdificio", "Building")">Edificio</a></li>
    <li><a href="@Url.Action("LstIngresoAdmin", "Income", new { EdificioId = Model.EdificioId })">Ingreso</a></li>
    <li><a href="@Url.Action("LstArchivoIngresoAdmin", "Income", new { IngresoId = Model.IngresoId, EdificioId = Model.EdificioId })" >Archivo de ingreso</a></li>
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-building-o"></i>&nbsp;Edificio</h4>
                <dl class="dl-horizontal">
                    <dt>Nombre</dt>
                    <dd>@Model.Edificio.Nombre</dd>
                    <dt>Unidad medida</dt>
                    <dd>@Model.DescripcionUnidadMedida</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-inverse">
    <div class="panel-body">
        <form method="post" class="form-horizontal" enctype="multipart/form-data">
            @Html.HiddenFor(x => x.IngresoId)
            @Html.HiddenFor(x => x.ArchivoIngresoId)
            @Html.HiddenFor(x => x.EdificioId)
            <div class="form-group">
                <label class="col-md-2 control-label">Nombre</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control", rows = "3" })
                    @Html.ValidationMessageFor(x => x.Nombre)
                </div>
            </div>  
                    @if (!string.IsNullOrEmpty(Model.Ruta))
                    {   @Html.EditorFor(x => x.Archivo, new { Ruta = Url.Action("DescargarArchivo", "Income", new { ruta = Model.Ruta, nombre = Model.Nombre, acronimo = Model.Edificio.Acronimo, unidadmedida = Model.DescripcionUnidadMedida }) }) }
                    else
                    {   @Html.EditorFor(x => x.Archivo) }
            <hr />
            <div class="form-group">
                <div class="ui-sortable">
                    <button type="submit" class="btn btn-sm btn-primary m-r-10 pull-right"><i class="fa fa-save"></i>&nbsp;&nbsp;Guardar</button>
                    <a href="@Url.Action("LstArchivoIngresoAdmin", "Income", new { IngresoId = Model.IngresoId, EdificioId = Model.EdificioId })" class="btn btn-sm btn-default m-r-5 pull-right"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
