@model VEH.Intranet.ViewModel.Income.LstDetalleIngresoViewModel
@{
    ViewBag.Title = "Detalle de ingreso";
}
@section Breadcrumbs{
    <li><a href="@Url.Action("LstEdificio", "Building")">Edificio</a></li>
    <li><a href="@Url.Action("LstIngresoAdmin", "Income", new { EdificioId = Model.EdificioId })">Ingreso</a></li>
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-building-o"></i>&nbsp;Edificio</h4>
                <dl class="dl-horizontal">
                    <dt>Nombre</dt>
                    <dd>@Model.Edificio.Nombre</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-money"></i>&nbsp;Ingreso</h4>
                <dl class="dl-horizontal">
                    <dt>Unidad de tiempo</dt>
                    <dd>@Model.DescripcionUnidadMedida</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<div>
    <div>
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <h4 class="panel-title"><i class="fa fa-list"></i>&nbsp;&nbsp;Listado</h4>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="col-sm-4 text-center">Concepto</th>
                                <th class="col-sm-2 text-center">Monto</th>
                                <th class="col-sm-2 text-center">Estado</th>
                                <th class="col-sm-2 text-center">Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LstDetalleIngreso)
                            {
                                <tr>
                                    <td>@item.Concepto</td>
                                    <td class="text-center">@String.Format("{0:0,0.00}", item.Monto)</td>
                                    <td class="text-center"><span class="label @(item.Estado == ConstantHelpers.EstadoActivo ? "label-success" : "label-danger")">@(item.Estado == ConstantHelpers.EstadoActivo ? "Activo" : "Inactivo")</span></td>
                                    <td class="text-center">
                                        <a class="btn btn-xs btn-default" href="@Url.Action("AddEditDetalleIngreso", "Income", new { DetalleIngresoId = item.DetalleIngresoId, IngresoId = Model.IngresoId, EdificioId = Model.EdificioId })"><i class="fa fa-pencil"></i>&nbsp;Editar</a>
                                        <a @Data.ModalLink("_DeleteDetalleIngreso", "Income", new { DetalleIngresoId = item.DetalleIngresoId, IngresoId = item.IngresoId, EdificioId = Model.EdificioId }) class="btn btn-default btn-xs"><i class="fa fa-trash-o"></i>&nbsp;&nbsp;Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model.LstDetalleIngreso, page => Url.Action("LstDetalleIngresoAdmin", new { IngresoId = Model.IngresoId, EdificioId = Model.EdificioId , np = page }), ConstantHelpers.Bootstrap3Pager)
                </div>
            </div>
        </div>
    </div>
</div>

<a class="btn btn-sm btn-default" href="@Url.Action("LstIngresoAdmin", "Income", new { EdificioId = Model.EdificioId })"><i class="fa fa-arrow-left"></i>&nbsp;Regresar</a>&nbsp;
<a class="btn btn-sm btn-primary" href="@Url.Action("AddEditDetalleIngreso", "Income", new { IngresoId = Model.IngresoId, EdificioId = Model.EdificioId })"><i class="fa fa-plus"></i>&nbsp;Agregar detalle ingreso</a>