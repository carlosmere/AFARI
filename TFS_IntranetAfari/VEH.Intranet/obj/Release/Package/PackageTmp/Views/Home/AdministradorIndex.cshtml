@model VEH.Intranet.ViewModel.Home.AdministradorIndexViewModel

@{
    ViewBag.Title = "Dashboard";
}

@section Breadcrumbs{

}

<div class="row">
    <div class="col-md-4 col-sm-6">
        <div class="widget widget-state bg-blue">
            <div class="state-icon"><i class="fa fa-user"></i></div>
            <div class="state-info">
                <h4>N° ADMINISTRADORES</h4>
                <p>@Model.NUsuariosAdmin</p>
            </div>
            <div class="state-link">
                <a href="@Url.Action("LstUsuarioAdm", "User")">Ver más <i class="fa fa-arrow-circle-o-right"></i></a>
            </div>
        </div>
    </div>

    <div class="col-md-4 col-sm-6">
        <div class="widget widget-state bg-green">
            <div class="state-icon"><i class="fa fa-building-o"></i></div>
            <div class="state-info">
                <h4>N° EDIFICIOS</h4>
                <p>@Model.NEdificios</p>
            </div>
            <div class="state-link">
                <a href="@Url.Action("LstEdificio", "Building")">Ver más <i class="fa fa-arrow-circle-o-right"></i></a>
            </div>
        </div>
    </div>

    <div class="col-md-4 col-sm-6">
        <div class="widget widget-state bg-red">
            <div class="state-icon"><i class="fa fa-clock-o"></i></div>
            <div class="state-info">
                <h4>UNIDAD DE TIEMPO</h4>
                <p>@Model.DesUnidadTiempo</p>
            </div>
            <div class="state-link">
                <a href="@Url.Action("LstUnidadDeTiempo", "TimeUnit")">Ver más <i class="fa fa-arrow-circle-o-right"></i></a>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <h4 class="panel-title"><i class="fa fa-list"></i>&nbsp;&nbsp;Reporte de visitas</h4>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" novalidate="novalidate">
                    <div class="form-group">
                        <label class="col-md-6">&nbsp;</label>
                        <div class="col-md-2">
                            @Html.DropDownListFor(x => x.Anio, Model.LstAnios, new { @class = "form-control select2" })
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-sm btn-primary m-r-5"><i class="fa fa-search"></i>&nbsp;&nbsp;Buscar</button>
                            <a class="btn btn-warning" href="@Url.Action("DescargarEstadisticas", "Home",new { Anio = Model.Anio})"><i class="fa fa-file"></i> Descargar Excel</a>
                        </div>
                    </div>
                </form>
                <div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
            </div>
        </div>
    </div>
</div>

<div id="modal-fondo" class="modal fade" tabindex="-1" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="titulo-fondo"></h4>
            </div>
            <div class="modal-body" style="max-height: 800px;">
                <div class="result">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th class="text-center">Tipo Inmueble</th>
                                <th class="text-center">Número</th>
                                <th class="text-center">Usuario</th>
                                <th class="text-center">#Web</th>
                                <th class="text-center">#App</th>
                            </tr>
                        </thead>
                        <tbody id="detalle-modal"></tbody>
                    </table>
                </div>
                <center id="loading">
                    <i class="fa fa-spinner fa-spin fa-2x fa-fw"></i> Cargando..
                </center>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="close-modal"><i class="fa fa-times"></i> Cerrar</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script>
        Highcharts.chart('container', {
            chart: {
                type: 'column',
                events: {
                    click: function (e) {
                        MostrarFondoCaja(this.series[0].searchPoint(e, true).category);
                    }
                }
            },
            title: {
                text: 'Reporte de visitas (Intranet) por año'
            },
            xAxis: {
                useHTML: true,
                categories: [
                    @foreach (var edi in Model.DicVisitaEdificioWeb)
                    {
                        @:'@(edi.Key.ToUpper()
                            .Replace("Ñ", "N")
                            .Replace("Á", "A")
                            .Replace("É", "E")
                            .Replace("Í", "I")
                            .Replace("Ó", "O")
                            .Replace("Ú", "U"))',
                    }
                ],
                crosshair: true
            },
            yAxis: {
                min: 0,
                title: {
                    text: 'Cantidad'
                }
            },
            tooltip: {
                headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
                pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                    '<td style="padding:0"><b>{point.y:.1f} Visitas</b></td></tr>',
                footerFormat: '</table>',
                shared: true,
                useHTML: true
            },
            plotOptions: {
                column: {
                    pointPadding: 0.2,
                    borderWidth: 0
                }
            },
            series: [{
                useHTML: true,
                name: 'WEB',
                data: [
                    @foreach (var edi in Model.DicVisitaEdificioWeb)
                    {
                        @:@edi.Value,
                    }
                ]

            }, {
                name: 'APP',
                data: [
                    @foreach (var edi in Model.DicVisitaEdificioApp)
                    {
                        @:@edi.Value,
                    }
                ]

            }]
        });

        function MostrarFondoCaja(edificio) {
            $('#titulo-fondo').html('<i class="fa fa-building"></i> Edificio: ' + edificio);
            $('#detalle-modal').html('');
            var modelo = {};
            modelo['Edificio'] = edificio;
            $.ajax({
                url: '@Url.Action("GetVisitasPorEdificio", "Json")',
                type: 'POST',
                data: modelo,
                async: true,
                success: function (data) {
                    $('#loading').hide();
                    var template = '';
                    for (var i = 0 ; i < data.length; i++) {
                        template += '<tr>' +
                                        '<td class="text-center">' + data[i].TipoInmueble + '</td>' +
                                        '<td class="text-center">' + data[i].NombreDepartamento + '</td>' +
                                        '<td class="text-center">' + data[i].NombreUsuario + '</td>' +
                                        '<td class="text-center">' + data[i].CantWeb + '</td>' +
                                        '<td class="text-center">' + data[i].CantApp + '</td>' +
                                    '</tr>';
                    }
                    $('#detalle-modal').append(template);
                }
            });
            $('#modal-fondo').modal('show');
        }
    </script>
}
