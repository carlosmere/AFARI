@model VEH.Intranet.ViewModel.Staff.AddEditPlanillaViewModel

@{
    ViewBag.Title = (Model.PlanillaId.HasValue ? "Editar" : "Agregar") + " planilla";
}
@section Breadcrumbs{
    <li><a href="@Url.Action("LstTrabajadorAdmin", "Employee", new { TrabajadorId = Model.TrabajadorId })">Trabajador</a></li>
    <li><a href="@Url.Action("LstPlanillaAdmin", "Staff", new { EdificioId = Model.EdificioId, TrabajadorId = Model.TrabajadorId })">Planilla</a></li>
}
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-building-o"></i>&nbsp;Edificio</h4>
                <dl class="dl-horizontal">
                    <dt>Acrónimo</dt>
                    <dd>@Model.Edificio.Acronimo </dd>
                    <dt>Nombre</dt>
                    <dd>@Model.Edificio.Nombre</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-inverse">
            <div class="panel-body">
                <h4><i class="fa fa-smile-o"></i>&nbsp;Trabajador</h4>
                <dl class="dl-horizontal">
                    <dt>Nombre</dt>
                    <dd>@Model.Trabajador.Nombres  @Model.Trabajador.Apellidos</dd>
                    <dt>DNI</dt>
                    <dd>@Model.Trabajador.DNI</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-inverse">
    <div class="panel-body">
        <form method="post" class="form-horizontal">
            @Html.HiddenFor(x => x.TrabajadorId)
            @Html.HiddenFor(x => x.PlanillaId)
            @*@Html.HiddenFor(x => x.UnidadTiempoId)*@
            <div class="form-group">
                <label class="col-md-2 control-label">Unidad de tiempo</label>
                <div class="col-md-3">
                    @Html.DropDownListFor(x => x.UnidadTiempoId, Model.LstComboUnidadTiempo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.UnidadTiempoId)
                </div>
            </div>
            @Html.EditorFor(x => x.HorasExtras, new { ancho = "3" })
            @Html.EditorFor(x => x.Feriado, new { ancho = "3" })
            @Html.EditorFor(x => x.AdelantoQuincena, new { ancho = "3" })
            @Html.EditorFor(x => x.SegundaQuincena, new { ancho = "3" })
            @Html.EditorFor(x => x.SegundaQuincenaNeto, new { ancho = "3" })
            @Html.EditorFor(x => x.ESSALUD, new { ancho = "3" })
            @Html.EditorFor(x => x.AporteObligatorio, new { ancho = "3" })
            @Html.EditorFor(x => x.PrimaSeguro, new { ancho = "3" })
            @Html.EditorFor(x => x.ComisionAFP, new { ancho = "3" })
            @Html.EditorFor(x => x.TotalDescuentos, new { ancho = "3" })
            @Html.EditorFor(x => x.SueldoTotalNeto, new { ancho = "3" })
            @Html.EditorFor(x => x.CTSMes, new { ancho = "3" })
            @Html.EditorFor(x => x.ReemplazoVacaciones, new { ancho = "3" })

            <hr />
            <div class="form-group">
                <div class="col-md-2 col-md-offset-10 ui-sortable">
                    <button type="submit" class="btn btn-sm btn-primary m-r-5"><i class="fa fa-save"></i>&nbsp;&nbsp;Guardar</button>
                    <a href="@Url.Action("LstPlanillaAdmin", "Staff", new { EdificioId = Model.EdificioId, TrabajadorId = Model.TrabajadorId })" class="btn btn-sm btn-default"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
