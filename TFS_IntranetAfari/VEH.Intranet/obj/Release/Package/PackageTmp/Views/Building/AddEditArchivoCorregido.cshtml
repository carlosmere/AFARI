@model VEH.Intranet.ViewModel.Building.AddEditArchivoCorregidoViewModel
@{
    ViewBag.Title = "AddEditArchivoCorregido";
}

<div class="panel panel-inverse">
    <div class="panel-heading">
        <h4 class="panel-title"><i class="fa fa-list"></i>&nbsp;&nbsp;Aádir o Editar Leyenda</h4>
    </div>
    <div class="panel-body">
        <form method="post" enctype="multipart/form-data">
            @Html.HiddenFor(X => X.EdificioId)
            @Html.HiddenFor(X => X.UnidadTiempoId)

            <div class="row">
                <div class="form-group">
                    <select class="form-control" name="Tipo">
                        <option value="@ConstantHelpers.TipoArchivo.BalanceGeneral" @(Model.Tipo==ConstantHelpers.TipoArchivo.BalanceGeneral?"selected='selected'":"")>@ConstantHelpers.TipoArchivo.BalanceGeneral</option>
                        <option value="@ConstantHelpers.TipoArchivo.Recibo" @(Model.Tipo == ConstantHelpers.TipoArchivo.Recibo ? "selected='selected'" : "") > @ConstantHelpers.TipoArchivo.Recibo</option>
                        <option value="@ConstantHelpers.TipoArchivo.ReporteGeneral" @(Model.Tipo == ConstantHelpers.TipoArchivo.ReporteGeneral ? "selected='selected'" : "") > @ConstantHelpers.TipoArchivo.ReporteGeneral</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <div class="col-sm-3">
                        <label>Archivo:</label>
                    </div>
                    <div class="col-sm-9">
                        <input type="file" name="archivo" class="form-control"/>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <div class="col-sm-3">
                        <label>Departamento: (si aplica)</label>
                    </div>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(X => X.Departamento, new SelectList(Model.LstDepartamentos, "Numero", "Numero"), "[--todos--]", new { @class = "form-control", placeholder = "Numero departamento" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <div class="ui-sortable">
                        <button type="submit" class="btn btn-sm btn-primary m-r-10 pull-right"><i class="fa fa-save"></i>&nbsp;&nbsp;Guardar</button>
                        <a href="@Url.Action("ArchivosCorregidos", "Building", new { UnidadTiempoId = Model.UnidadTiempoId, EdificioId = Model.EdificioId });)" class="btn btn-sm btn-default m-r-5 pull-right"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;Cancelar</a>
                    </div>
                </div>
            </div>

        </form>

    </div>
</div>