@model VEH.Intranet.ViewModel.Building.LstCronogramaMantenimientoViewModel

@{
    ViewBag.Title = "Cronograma de Mantenimientos";
}

@section Breadcrumbs{
    @if (Session.GetRol() == AppRol.Administrador)
    {
        <li><a href="@Url.Action("LstEdificio", "Building")">Edificio</a></li>
        <li><a href="@Url.Action("LstOpcionEdificio", "Building", new { EdificioId = Model.EdificioId })">Opciones Edificio</a></li>
    }
}

<div class="well">
    <strong>Edificio: @Model.NombreEdificio</strong>
</div>
<div class="row">
    <div class="panel panel-inverse">
        <div class="panel-heading">
            <h4 class="panel-title"><i class="fa fa-filter"></i>&nbsp;&nbsp;Filtro</h4>
        </div>
        <div class="panel-body">
            <form class="form-horizontal" novalidate="novalidate">
                @Html.HiddenFor(x => x.EdificioId)
                <div class="form-group">
                    <label class="col-md-2 control-label ui-sortable">Año</label>
                    <div class="col-md-6 ui-sortable">
                        @Html.DropDownListFor(x => x.Anio, Model.LstAnios, new { @class = "form-control select2" })
                    </div>
                    <div class="col-md-2 col-md-offset-10 ui-sortable">
                        <button type="submit" class="btn btn-sm btn-primary m-r-5"><i class="fa fa-search"></i>&nbsp;&nbsp;Buscar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div> 
    <div>
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <h4 class="panel-title"><i class="fa fa-list"></i>&nbsp;&nbsp;Listado</h4>
            </div>
            <div class="panel-body">
                <form method="post" action="@Url.Action("ProcesarCronograma","Building")">
                    @Html.HiddenFor(x => x.EdificioId)
                    @Html.HiddenFor(x => x.Anio)
                    <p>1.- Para indicar que un elemento se realizará en un mes determinado, hacer click en el checkbox.</p>
                    <p>2.- Para indicar que el mantenimiento fue realizado se deberá poner una X en la caja de texto.</p>
                    <br />
                    <div class="table-responsive">
                        <table class="table" style="font-size:10px">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Nombre</th>
                                    <th>Enero</th>
                                    <th>Febrero</th>
                                    <th>Marzo</th>
                                    <th>Abril</th>
                                    <th>Mayo</th>
                                    <th>Junio</th>
                                    <th>Julio</th>
                                    <th>Agosto</th>
                                    <th>Septiembre</th>
                                    <th>Octubre</th>
                                    <th>Noviembre</th>
                                    <th>Diciembre</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.LstCronograma)
                                {
                                    <tr>
                                        <td><a class="btn btn-sm btn-default" @Data.ModalLink("_AddEditCronograma", "Building", new { EdificioId = Model.EdificioId, CronogramaId = item.CronogramaId, Anio = Model.Anio })><i class="fa fa-edit"></i></a></td>
                                        <td>@item.Orden.- @item.Nombre</td>
                                        @for (int i = 1; i <= 12; i++)
                                        {
                                            var detalle = @item.DetalleCronograma.FirstOrDefault(x => x.Mes == i);
                                            <td style="background-color:@(detalle.EsMarcado ? "#909192" : detalle.EsRealizado ? "#d4d4d4" : String.Empty)">
                                                <div class="row">
                                                    <input class="col-sm-6" type="checkbox" @(detalle.EsRealizado ? "checked" : String.Empty) name="chk-@detalle.DetalleCronogramaId" />
                                                    <input class="col-sm-6" value="@detalle.Dia@(detalle.EsMarcado ? "X":String.Empty)" name="input-@detalle.DetalleCronogramaId" />
                                                </div>
                                            </td>
                                        }
                                        @if (Session.GetRol() == AppRol.Administrador)
                                        {
                                            <td>
                                                <a class="btn btn-sm btn-danger" href="@Url.Action("DeleteCronograma", "Building", new {EdificioId = Model.EdificioId, CronogramaId = item.CronogramaId , Anio = Model.Anio})"><i class="fa fa-trash"></i></a>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="pull-left">
                            <button type="submit" class="btn btn-warning"><i class="fa fa-save"></i> Guardar</button>
                        </div>
                        <div class="pull-right">
                            <a class="btn btn-sm btn-success" @Data.ModalLink("_ReplicarCronogramaFuturo", "Building", new { EdificioId = Model.EdificioId, Anio = (Model.Anio + 1) })><i class="fa fa-exchange"></i>&nbsp;Crear Cronograma (Futuro)</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@if (Session.GetRol() == AppRol.Administrador)
{
    <a class="btn btn-sm btn-primary" @Data.ModalLink("_AddEditCronograma", "Building", new { EdificioId = Model.EdificioId , Anio = Model.Anio})><i class="fa fa-plus"></i>&nbsp;Agregar Elemento</a>
    if (Model.LstCronograma.Count == 0)
    {
        <a class="btn btn-sm btn-default" @Data.ModalLink("_ReplicarCronograma", "Building", new { EdificioId = Model.EdificioId, Anio = Model.Anio })><i class="fa fa-exchange"></i>&nbsp;Replicar Cronograma</a>
    }
}

<a class="btn btn-sm btn-success" href="@Url.Action("DownloadCronogramaMantenimiento", "Building", new { EdificioId = Model.EdificioId, Anio = Model.Anio })"><i class="fa fa-download"></i>&nbsp;Descargar Cronograma</a>

