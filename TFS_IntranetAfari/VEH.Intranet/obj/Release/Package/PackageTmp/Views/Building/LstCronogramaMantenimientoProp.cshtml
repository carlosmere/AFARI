@model VEH.Intranet.ViewModel.Building.LstCronogramaMantenimientoViewModel

@{
    ViewBag.Title = "Cronograma de Mantenimientos";
}

@section Breadcrumbs{
    
}

<div class="well">
    <strong>Edificio: @Model.NombreEdificio</strong><br />
    <strong>Año: @Model.Anio</strong>
</div>

<div> 
    <div class="row">
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <h4 class="panel-title"><i class="fa fa-filter"></i>&nbsp;&nbsp;Filtro</h4>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" novalidate="novalidate">
                    @Html.HiddenFor(x => x.EdificioId)
                    <div class="form-group">
                        <label class="col-md-2 control-label ui-sortable">Año</label>
                        <div class="col-md-6 ui-sortable">
                            @Html.DropDownListFor(x => x.Anio, Model.LstAnios, new { @class = "form-control select2" })
                        </div>
                        <div class="col-md-2 col-md-offset-10 ui-sortable">
                            <button type="submit" class="btn btn-sm btn-primary m-r-5"><i class="fa fa-search"></i>&nbsp;&nbsp;Buscar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div>
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <h4 class="panel-title"><i class="fa fa-list"></i>&nbsp;&nbsp;Listado</h4>
            </div>
            <div class="panel-body">
                <div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Enero</th>
                                    <th>Febrero</th>
                                    <th>Marzo</th>
                                    <th>Abril</th>
                                    <th>Mayo</th>
                                    <th>Junio</th>
                                    <th>Julio</th>
                                    <th>Agosto</th>
                                    <th>Septiembre</th>
                                    <th>Octubre</th>
                                    <th>Noviembre</th>
                                    <th>Diciembre</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.LstCronograma)
                                {
                                    <tr>
                                        <td>@item.Nombre</td>
                                        @for (int i = 1; i <= 12; i++)
                                        {
                                            var detalle = @item.DetalleCronograma.FirstOrDefault(x => x.Mes == i);
                                            <td style="background-color:@(detalle.EsRealizado ? "#d4d4d4" : String.Empty)">
                                                <div class="row">
                                                    @if (detalle.EsMarcado)
                                                    {
                                                        <center>
                                                            <i class="fa fa-times"></i>
                                                        </center>
                                                    }
                                                </div>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<a class="btn btn-sm btn-success" href="@Url.Action("DownloadCronogramaMantenimiento", "Building", new { EdificioId = Model.EdificioId, Anio = Model.Anio })"><i class="fa fa-download"></i>&nbsp;Descargar Cronograma</a>


