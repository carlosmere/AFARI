@model VEH.Intranet.ViewModel.Building.ArchivosCorregidosViewModel
@{
    ViewBag.Title = "ArchivosCorregidos";
}
@section Breadcrumbs{
    <li><a href="@Url.Action("LstEdificio", "Building")">Lista de Edificios</a></li>
    <li><a href="@Url.Action("LstOpcionEdificio", "Building", new { EdificioId = Model.EdificioId })">Opciones Edificio</a></li>
}

<div>
    <div>

       
                <div class="panel panel-inverse">
                    <div class="panel-heading">
                        <div class="panel-heading-btn">
                            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse" data-original-title="" title="Colapsar / Expandir"><i class="fa fa-minus"></i></a>
                        </div>
                        <h4 class="panel-title"><i class="fa fa-filter"></i>&nbsp;&nbsp;Filtro</h4>
                    </div>
                    <div class="panel-body">
                        <form class="form-horizontal">
                            @Html.HiddenFor(x => x.EdificioId)
                            <div class="form-group">
                                <label class="col-md-2 control-label">Unidad de tiempo</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(x => x.UnidadTiempoId, new SelectList(Model.LstUnidadTiempo,"UnidadTiempoId","Descripcion"), new { @class = "form-control select2" })
                                </div>
                            </div>
                            <hr />
                            <div class="form-group">
                                <div class="col-md-2 col-md-offset-10 ui-sortable">
                                    <button type="submit" class="btn btn-sm btn-primary m-r-5"><i class="fa fa-search"></i>&nbsp;&nbsp;Buscar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

        <div class="panel panel-inverse">
            <div class="panel-heading">
                <h4 class="panel-title"><i class="fa fa-list"></i>&nbsp;&nbsp;Archivos Corregidos</h4>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="col-sm-2 text-center">Archivo</th>
                                <th class="col-sm-4 text-center">Fecha</th>
                                <th class="col-sm-2 text-center">Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LstArchivoCorrecion)
                            {
                                <tr>
                                    <td class="text-center">@item.Tipo</td>
                                    <td class="text-center">@item.FechaSubido</td>
                                    <td class="text-center"><a class="btn btn-danger" href="@Url.Action("DeleteArchivoCorregido","Building",new {ArchivoCorregidoId = item.ArchivoCorrecionEdificioId,EdificioId = item.EdificioId , UnidadTiempoId = item.UnidadTiempoId})"><i class="fa fa-times"></i> Descartar</a></td>
                              
                                </tr>
                            }
                        </tbody>
                    </table>
                  
                </div>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-sm btn-primary" href="@Url.Action("AddEditArchivoCorregido", "Building", new { EdificioId = Model.EdificioId, UnidadTiempoId = Model.UnidadTiempoId })"><i class="fa fa-plus"></i>&nbsp;Agregar archivo corregido</a>
