@inherits System.Web.Mvc.WebViewPage
@{
    var model = (VEH.Intranet.ViewModel.Templates.emailValidacionViewModel)Model;
}
<!DOCTYPE html>
<html xmlns='http://www.w3.org/1999/xhtml'>
<head>
    <meta content='text/html; charset=utf-8' http-equiv='Content-Type'>
    <meta content='width=device-width, initial-scale=1.0' name='viewport'>
    <title>@model.Titulo</title>

</head>
<body style="font-family:Calibri !important;font-size:11px !important">
    <div  style="font-family:Calibri !important;font-size:11px !important">
        @Html.Raw(model.Mensaje.Replace(" ", "&nbsp;").Replace("\n", "<br/>").ToString())
    </div>
    <br />
    <div class="table-responsive"  style="font-family:Calibri !important;font-size:11px !important">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="col-sm-3">Monto</th>
                    <th class="col-sm-1"></th>
                    <th class="col-sm-1"></th>
                    <th class="col-sm-3">Beneficiario</th>
                    <th class="col-sm-1"></th>
                    <th class="col-sm-3">Referencia</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in model.LstValidacion)
                {
                    <tr>
                        <td>@item.MontoOperacion</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>@item.Beneficiario</td>
                        <td>&nbsp;</td>
                        <td>@item.Referencia</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <br />
    <p style="font-family:Calibri !important;font-size:11px !important">    Saludos cordiales,</p>
    <br />
    @if (!String.IsNullOrEmpty(model.Firma) && model.Firma.Length > 1)
    {
        <img src="http://afari.pe/intranet/Resources/Files/@model.Firma" />
    }
</body>
</html>
